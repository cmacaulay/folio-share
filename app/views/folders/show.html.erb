<h1><%= @folder.name %></h1>
<p>Find me in app/views/folders/show.html.erb</p>

<%= link_to "Create New Folder", new_folder_path, class: "btn" %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>File Size</th>
      <th>File Type</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @folder.children.each do |child| %>
        <td>
          <%= link_to child.name, child.class == Upload ? upload_path(child) : folder_path(child) %>
        </td>
        <td>
          <%= child.size %>
        </td>
        <td>
          <%= child.content_type %>
        </td>
      </tr>
        <% end %>
  </tbody>
</table>
