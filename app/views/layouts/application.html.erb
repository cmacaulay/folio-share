<!DOCTYPE html>
<html>
  <head>
    <title>FolioShare</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>

    <% if current_user %>
      <%= render partial: "shared/user_nav" %>
    <% else %>
      <%= render partial: "shared/guest_nav" %>
    <% end %>

    <div style='text-align:center'>
      <% flash.each do |type, message| %>
        <%= content_tag :div, sanitize(message), class:"alert-#{type}" %>
      <% end %>
    </div>

    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
